<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.OrderDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:gravity="center"
            android:textSize="18sp"

            />

    </LinearLayout>

    <RelativeLayout
        android:layout_margin="5dp"
        android:padding="3dp"
        android:background="@drawable/background_gray_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="order_no"

            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/memo"
            android:layout_toEndOf="@+id/memo"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客号"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView6" />

        <TextView
            android:id="@+id/cus_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cus_no"
            android:layout_below="@+id/order_no"
            android:layout_alignLeft="@+id/order_no"
            android:layout_alignStart="@+id/order_no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合同日期"
            android:id="@+id/l_os_dd"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/order_no"
            android:layout_toEndOf="@+id/order_no"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预交日期"
            android:id="@+id/l_est_dd"
            android:layout_below="@+id/l_os_dd"
            android:layout_alignLeft="@+id/l_os_dd"
            android:layout_alignStart="@+id/l_os_dd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客单号"
            android:id="@+id/l_cus_os_no"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业务员"
            android:id="@+id/textView5"
            android:layout_below="@+id/l_cus_os_no"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/cus_os_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cus_os_no"
            android:layout_below="@+id/cus_no"
            android:layout_alignLeft="@+id/cus_no"
            android:layout_alignStart="@+id/cus_no" />

        <TextView
            android:id="@+id/sal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cus_os_no"
            android:layout_alignLeft="@+id/cus_os_no"
            android:layout_alignStart="@+id/cus_os_no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产交期"
            android:id="@+id/l_so_data"
            android:layout_alignBottom="@+id/cus_os_no"
            android:layout_alignLeft="@+id/l_est_dd"
            android:layout_alignStart="@+id/l_est_dd" />

        <TextView
            android:id="@+id/os_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/l_os_dd"
            android:layout_toEndOf="@+id/l_os_dd" />

        <TextView
            android:id="@+id/est_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/os_dd"
            android:layout_alignLeft="@+id/os_dd"
            android:layout_alignStart="@+id/os_dd" />

        <TextView
            android:id="@+id/so_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/est_dd"
            android:layout_alignLeft="@+id/est_dd"
            android:layout_alignStart="@+id/est_dd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:id="@+id/l_memo"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/memo"
            android:layout_below="@+id/sal"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />


    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
          android:id="@+id/scrollIndicatorDown"
        android:layout_height="0dp"
        android:fillViewport="true">

        <ListView
            android:id="@+id/order_item_list"
            android:layout_width="wrap_content"
            android:divider="@drawable/icon_divider"
            android:layout_height="match_parent"
            android:headerDividersEnabled="true"
            android:footerDividersEnabled="true"


            />

    </HorizontalScrollView>



</LinearLayout>
